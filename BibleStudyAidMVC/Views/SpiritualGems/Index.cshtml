@model IEnumerable<SpiritualGemsViewModel>

@{
    ViewData["Title"]="Spiritual Gems";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
    int i = 1;
}
<h3>@ViewData["Title"]</h3>


@if (Model == null)
{
    <div id="loading">Loading...</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>No</th>
                <th>Brief Description</th>
                <th>Date Entered</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td><a asp-controller="SpiritualGems" asp-action="Edit" asp-route-id="@item.Id" class="nav-link">@i</a></td>
                    <td><a asp-controller="SpiritualGems" asp-action="Edit" asp-route-id="@item.Id" class="nav-link">@item.BriefDescription</a></td>
                    <td>@item.DateUpdated</td>
                </tr>
            </tbody>
            i++;
        }

    </table>
}

<br />
<br />
<a asp-action="Create"><input class="btn btn-primary" value="Create Spiritual Gem"/></a>
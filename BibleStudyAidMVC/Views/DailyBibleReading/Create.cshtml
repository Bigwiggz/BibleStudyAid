@model DailyBibleReadingVM
@{
    ViewData["Title"]="Daily Bible Reading";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h3>Add Daily Bible Reading</h3>

<form asp-action="Create" enctype="multipart/form-data">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ScriptureStartPoint" class="control-label">Scripture Start Point</label>
        <input type="text" asp-for="ScriptureStartPoint" class="form-control"/>
        <span asp-validation-for="ScriptureStartPoint" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ScriptureEndPoint" class="control-label">Scripture End Point</label>
        <input type="text" asp-for="ScriptureEndPoint" class="form-control"/>
        <span asp-validation-for="ScriptureEndPoint" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateRead" class="control-label">Date Read</label>
        <input type="datetime-local" asp-for="DateRead" class="form-control" value="@DateTime.Now"/>
        <span asp-validation-for="DateRead" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LessonLearnedDescription" class="control-label"> Lesson Learned</label>
        <textarea asp-for="LessonLearnedDescription" class="form-control"></textarea>
        <span asp-validation-for="LessonLearnedDescription" class="text-danger"></span>
    </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>

